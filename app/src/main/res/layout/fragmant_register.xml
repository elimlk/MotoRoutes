<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="60sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginVertical="10dp"
        android:src="@drawable/logo_moto_route_new"
        android:id="@+id/iv_banner" />
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_banner"
        android:layout_marginHorizontal="40dp"
        android:layout_marginBottom="70dp"
        app:cardCornerRadius="@dimen/loginCardRadius"
        android:elevation="16dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/Light_Green_50"
        android:id="@+id/card_signUp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="10dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_layout_email_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:endIconMode="clear_text"
                app:startIconDrawable="@drawable/ic_baseline_email_24"
                app:helperText="@string/helper_required"
                app:helperTextTextColor="@color/red"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_register_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:hint="@string/hint_login"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    android:inputType="text"
                    android:gravity="center_horizontal"
                    tools:ignore="MissingConstraints" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_layout_password_register"
                android:layout_below="@id/text_layout_email_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:endIconMode="clear_text"
                app:startIconDrawable="@drawable/ic_baseline_password_24"
                app:helperText="@string/helper_required"
                app:helperTextTextColor="@color/red"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_password"
                    android:layout_margin="20dp"
                    android:gravity="center_horizontal"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    android:inputType="textPassword"
                    android:id="@+id/et_register_password"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_layout_fullname_register"
                android:layout_below="@id/text_layout_password_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:endIconMode="clear_text"
                app:startIconDrawable="@drawable/ic_baseline_assignment_ind_24"
                app:helperTextTextColor="@color/red"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_register_fullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:ems="10"
                    android:hint="@string/hint_fullName"
                    android:gravity="center_horizontal"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    android:inputType="textCapWords"
                    android:layout_below="@id/text_layout_password_register"
                    tools:ignore="MissingConstraints" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/text_layout_phone_register"
                android:layout_below="@id/text_layout_fullname_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:endIconMode="clear_text"
                app:startIconDrawable="@drawable/ic_baseline_phone_24"
                app:helperTextTextColor="@color/red"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_phoneNumber"
                    android:imeOptions="actionDone"
                    android:maxLines="1"
                    android:inputType="phone"
                    android:gravity="center_horizontal"
                    android:layout_margin="20dp"
                    android:ems="10"
                    android:id="@+id/et_register_phoneNumber"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_layout_phone_register"
                android:layout_marginHorizontal="50dp"
                android:backgroundTint="@color/Light_Green_700"
                android:textColor="@color/white"
                android:textStyle="bold"
                style="?attr/materialButtonStyle"
                android:text="@string/btn_signUp"
                android:id="@+id/btn_register"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_register_signIn"
            android:text="@string/signup_login_hint"
            android:textSize="15sp"
            android:layout_marginBottom="25dp"
            style="bold"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:layout_centerInParent="true"
            />

    <ProgressBar
        android:id="@+id/RagisterPrograssBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        style="@android:style/Widget.Material.ProgressBar.Large"
        android:visibility="gone"
        tools:ignore="MissingConstraints"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</RelativeLayout>